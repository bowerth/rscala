#!/bin/bash

PORT=7491

cd $(dirname $(readlink -f "$0"))
CWD=$PWD
cd ../R/rscala/vignettes

# Start the server.
$CWD/knitr-server &
PID=$!

# Give the server a chance to start.
sleep 2

# Do an initial deep run.
$CWD/knitr-compile n

# Watch for chances.
vulture "Integration_of_R_and_Scala_Using_rscala.Rnw" bash -c "$CWD/knitr-compile r"

# Kill the server.
kill $PID

