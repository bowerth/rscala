#!/usr/bin/env Rscript

getScriptPath <- function() {
  cmd.args <- commandArgs()
  m <- regexpr("(?<=^--file=).+", cmd.args, perl=TRUE)
  script.dir <- dirname(regmatches(cmd.args, m))
  if(length(script.dir) == 0) stop("can't determine script dir: please call the script with Rscript")
  if(length(script.dir) > 1) stop("can't determine script dir: more than one '--file' argument detected")
  script.dir
}
setwd(file.path(getScriptPath(),"..","R","rscala","vignettes"))

library(knitr)

while ( TRUE ) {
  cat("At the top.\n")
  socket <- socketConnection(port=7491,server=TRUE,blocking=TRUE,timeout=2592000)
  cmd <- readChar(socket,nchars=1)
  close(socket)
  if ( cmd == "n" ) {
    system2("rm",c("-rf","cache"))
    system2("clean-tex")
    knit("Integration_of_R_and_Scala_using_rscala.Rnw")
    system2("pdflatex","Integration_of_R_and_Scala_using_rscala.tex")
    system2("bibtex","Integration_of_R_and_Scala_using_rscala.aux")
    system2("pdflatex","Integration_of_R_and_Scala_using_rscala.tex")
    system2("pdflatex","Integration_of_R_and_Scala_using_rscala.tex")
    system2("pdflatex","Integration_of_R_and_Scala_using_rscala.tex")
  }
  else if ( cmd == "r" ) {
    knit("Integration_of_R_and_Scala_using_rscala.Rnw")
    system2("pdflatex","Integration_of_R_and_Scala_using_rscala.tex")
  }
  else if ( cmd == "h" ) {
    cat("Hi.\n")
  }
  else stop("protocal error")
}

